{
    "command": "cut",
    "cases":
    [
        {
            "predicate":
            {
                "operator": "or",
                "operands":
                [
                    {
                        "operator": "value",
                        "operands": ["-d", "\n"]
                    },
                    {
                        "operator": "exists",
                        "operands": ["-z"]
                    }
                ]
            },
            "class": "pure",
            "inputs": ["stdin"],
            "outputs": ["stdout"]
        },
        {
            "predicate": "default",
            "class": "stateless",
            "inputs": ["stdin"],
            "outputs": ["stdout"]
        }
    ],
    "comment": "TODO: Put args[:] in the inputs of cut. The issue with this at the moment is that option values are considered file arguments.",
    "options":
    [
        "stdin-hyphen",
        "empty-args-stdin"
    ],    
    "short-long":
    [
        {
            "short": "-d",
            "long": "--delimiter"
        },
        {
            "short": "-z",
            "long": "--zero-terminated"
        }
    ],
    "options-with-arguments":
    [
        "-b",
        "-c",
        "-d",
        "-f"
    ]
}
